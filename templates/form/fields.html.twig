{% block choice_with_list_widget %}
    <link href="{{ asset('css/bundle-task-list.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/task-list.css') }}" rel="stylesheet"/>

    <div class="e-sprint-choice-with-list-wrapper">
        {{ block('choice_widget') }}
        <ol id="e-sprint-bundle-task-list"></ol>
    </div>

    <script src="{{ asset('js/core/bundle-task-list.js') }}"></script>
{% endblock %}

{% block choice_with_calendar_widget %}
    <link href="{{ asset('css/calendar.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/task-list.css') }}" rel="stylesheet"/>

    <div class="e-sprint-choice-with-calendar-wrapper">
        {{ block('choice_widget') }}
        <hr />
        <div>
            <p class="e-sprint-start date"></p>
            <p class="e-sprint-end date"></p>
        </div>
        <div>
            <h4>Task List</h4>
            <ol class="e-sprint-task-list"></ol>
        </div>
        <hr />
        <div class="e-sprint-calendar-user-list-wrapper">
            <div class="user-list">
                <div class="user">
                    <p class="icon">aamanov</p>
                </div>
                <div class="user">
                    <p class="icon">pivanov</p>
                </div>
            </div>
            <div class="calendar">
                <div class="month">
                    <ul>
                        <li>
                            <span class="e-sprint-month-name"></span>
                            <span class="e-sprint-year"></span>
                            <span class="e-sprint-actions"></span>
                        </li>
                    </ul>
                </div>

                <ul class="weekdays">
                </ul>

                <ul class="cells"></ul>
            </div>
        </div>
        <div class="e-sprint-chunk">
            <div class="e-sprint-chunk-task-list-wrapper">
                <label for="chunk-task-list">Tasks</label>
                <textarea name="chunk-task-list" id="chunk-task-list" cols="15" rows="3" placeholder="D911-1234"></textarea>
            </div>
            <div class="e-sprint-chunk-estimate-wrapper">
                <label for="estimate">Estimate (m)</label>
                <input type="number" id="estimate" placeholder="120 or 120+30">
            </div>
            <button>Save</button>
        </div>
    </div>

    <script src="{{ asset('js/schedule/calendar.js') }}"></script>
{% endblock %}
